<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_fragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/dashboard_sendCard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="7dp"
        android:backgroundTint="@color/purple_200">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_sendCard_Title"
                android:text="Send file"
                android:textStyle="italic|bold"
                android:textSize="16sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/dashboard_complainCard"
        android:layout_below="@id/dashboard_sendCard"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="9dp"
        android:backgroundTint="@color/purple_200">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_complain_Title"
                android:text="Complain form"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:layout_centerInParent="true"/>

        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>
    
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/dashboard_feedbackCard"
        android:backgroundTint="@color/purple_200"
        android:layout_below="@id/dashboard_complainCard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="9dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_feedback_title"
                android:text="Give us your feedback"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_extendedFloatingButton"
            android:text="Emergency"
            android:textAllCaps="false"
            app:icon="@drawable/ic_extended_floating_button"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_200"
            />

    </com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>

</RelativeLayout>