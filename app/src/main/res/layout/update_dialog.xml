<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customDialog_ImageLayout"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/customDialog_Image"
            android:layout_centerInParent="true"
            android:layout_below="@id/customDialog_title"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher_round"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_title"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_uploadBtn"
            android:text="Upload Image"
            android:textAllCaps="false"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"
            android:layout_below="@id/customDialog_Image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customDialog_InformationLayout"
        android:layout_below="@id/customDialog_ImageLayout"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_forename"
            android:text="Forename"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_editForename"
            android:hint="Enter new forname"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/customDialog_InformationLayout_forename"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_surname"
            android:text="Surname"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/customDialog_InformationLayout_editForename"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_editSurname"
            android:hint="Enter new surname"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/customDialog_InformationLayout_surname"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_email"
            android:text="Email"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_below="@id/customDialog_InformationLayout_editSurname"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_editEmail"
            android:hint="Enter new email"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/customDialog_InformationLayout_email"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_phone"
            android:text="Phone"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_below="@id/customDialog_InformationLayout_editEmail"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_InformationLayout_editPhone"
            android:hint="Enter new phone"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/customDialog_InformationLayout_phone"
            android:inputType="number"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customDialog_SubmitBtnLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/customDialog_InformationLayout"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_submitBtn"
            android:text="Submit"
            android:textAllCaps="false"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/customDialog_dismissBtn"
            android:layout_marginStart="50dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialog_dismissBtn"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"

            />

    </RelativeLayout>

</RelativeLayout>